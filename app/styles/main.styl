body
  background-color : inherit

#documentviewer.context
  width:444px
  display:inline-block
  position:relative

#documentviewer
  position:absolute
  background-color : #404040
  width:100%
  top:0
  bottom:2em
  transition: width 0.5s ease
  z-index:1

#htmlviewer
  width:100%
  height:100%

#bottom
  padding: 0.5em 1em
  box-sizing:border-box
  position:absolute
  background-color: #474747
  background-image: linear-gradient(hsla(0,0%,27%,.95),hsla(0,0%,32%,.99))
  box-shadow: inset -1px 0 0 hsla(0,0%,100%,.08), inset 0 -1px 1px hsla(0,0%,0%,.15), inset 0 1px 0 hsla(0,0%,100%,.05), 0 -1px 0 hsla(0,0%,0%,.15), 0 -1px 1px hsla(0,0%,0%,.1)
  bottom:0
  z-index:1
  width:100%

#context.context
  display:inline-block

#context
  display:none
  position:absolute
  left:444px
  right:0px
  padding: 1.5em
  height:87%
  overflow:scroll
  border-left: solid black 3px

.textLayer
  overflow:visible

a.concept
  position: relative
  border: solid blue 1px
  white-space: pre
  cursor: pointer

a.concept.c1, .c1
  border : solid green 1px

a.concept.c2, .c2
  border : solid red 1px

a.concept.c3, .c3
  border : solid orange 1px

.popup
  white-space : normal

.popup img.image
  max-width:245px
  display:block

.scroller
  width:100%
  white-space:nowrap
  overflow-x:scroll
  overflow-y:hidden

.scroller .item
  white-space:normal
  vertical-align:top
  max-width:250px

.scroller .item img
  max-height:250px

a:hover .visible-onhover
  display:block

div.description
  margin: 5pt 0pt

.mp
  width:250px
  bottom:100% !important
  left:-125px !important
  top:auto !important
