script(type="text/ng-template",id="partials/concept.html")
  a(ng-mouseover="fetchInfo(concepts)",ng-click="openContext(concepts,label);$event.stopPropagation()",ng-class="'c'+class") {{ngram}} <div class="ui large popup top center transition mp visible-onhover">
    i.icon.loading(ng-show="loading!=2")
    .header {{label}}
    .content
      img.image(ng-if="imageURL",src="{{imageURL}}")
      static-gmap(ng-if="lat",size="250x200",sensor="false",zoom="8",markers="{ color: 'red',label:label,coords: [lat,lng]}")
      {{gloss}}
    | </div>
#pdfviewer(ng-class="{ context : context }",ng-click="context=false")
  include pdfviewer.jade
#context(ng-class="context ? 'context' : ''"): #context2
  h1 {{context.label}}
  |Sources:
  ul.ui.horizontal.bulleted.list: li.item(ng-repeat="concept in context.concepts"): a(href="{{concept.substring(1,concept.length-1)}}") {{concept}}
  div: img(ng-repeat="imageURL in context.imageURLs",src="{{imageURL}}")
  .description(ng-repeat="description in context.descriptions",ng-class="'c'+description.class") {{description.text}}
  div(ng-show="context.bob || context.eob || context.boe || context.eoe")
    h2 Timeline
  div(ng-if="context.lat")
    h2 Location
    map(style="display:block;height:300px",zoom="8",center="[{{context.lat}},{{context.lng}}]")
      marker(position="[{{context.lat}},{{context.lng}}]",title="{{context.label}}")
      marker(ng-repeat="location in context.linkedLocations" position="[{{location.lat}},{{location.lng}}]",title="{{location.label}}" icon="http://maps.google.com/mapfiles/ms/icons/blue-dot.png",on-click="openContext(location.concept,location.label)")
  h2 Possibly Related Resources
  div(ng-repeat="(title,groups) in context.linkedResources")
    h3 {{title}}
    div(ng-repeat="group in groups")
      h4 {{group.group}}
      .scroller.ui.horizontal.list
        .item(ng-repeat="res in group.resources")
          .group(ng-if="res.group")
            .content: .header {{res.group}}
          div(ng-if="!res.group")
            a(ng-if="res.imageURL" href="{{res.url}}"): img(src="{{res.imageURL}}")
            .content
              a.header(href="{{res.url}}") {{res.label}}
              div {{res.description}}
              div.extra {{res.source}}
#bottom
  span.c1 WW1LOD
  span.c2 DBPedia
